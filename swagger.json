{
  "swagger": "2.0",
  "info": {
    "version": "0.1.0",
    "title": "Marketplace Demo",
    "description": "Marketplace Demo API Documentation",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "https://mysterious-bayou-01036.herokuapp.com",
  "basePath": "/",
  "tags": [
    {
      "name": "Users",
      "description": "API for users in the system"
    },
    {
      "name": "Items",
      "description": "API for items in the DB"
    }
  ],
  "schemes": ["http"],
  "securityDefinitions": {
    "Session": {
      "type": "basic",
      "description": "session-based",
      "name": "session",
      "in": "header"
    }
  },
  "consumes": ["application/json"],
  "produces": ["application/json"],

  "paths": {
    "/users/login": {
      "post" :{
        "tags": ["Users"],
        "summary": "Login user",
        "parameters": [{
          "in": "body",
          "name": "email",
          "type": "string",
          "description": "User email address",
          "required": true
        }, {
          "in": "body",
          "name": "password",
          "type": "string",
          "description": "User password",
          "required": true
        }],
        "responses": {
          "200": {
            "description": "Login Success"
          },
          "400": {
            "description": "No User Found"
          },
          "500": {
            "description": "User Login Error. Passes error object back"
          }
        }
      }
    },
    "/users/logout" : {
      "get": {
        "tags": ["Users"],
        "summary": "Log out user",
        "security": [],
        "responses": {
          "200": {
            "description": "Log out successfully"
          }
        }
      }
    },
    "/users/register": {
      "post": {
        "tags": ["Users"],
        "summary": "Register User",
        "parameters": [{
          "in": "body",
          "name": "email",
          "type": "string",
          "description": "User email address",
          "required": true
        }, {
          "in": "body",
          "name": "password",
          "type": "string",
          "description": "User password",
          "required": true
        }],
        "responses": {
          "200": {
            "description": "User Registration successfuk"
          },
          "400": {
            "description": "No User was created due to some DB problem"
          },
          "500": {
            "description": "Error creating user due to user already existing or server problem"
          }
        }
      }
    },
    "/items/getAll": {
      "get": {
        "tags": ["Items"],
        "summary": "Get all available item for display",
        "responses": {
          "200": {
            "description": "Found items and returned"
          },
          "404": {
            "description": "No items found"
          },
          "500": {
            "description": "Server error. Send error back."
          }
        }
      }
    },
    "/items/getID/:id": {
      "get": {
        "tags": ["Items"],
        "summary": "Get item by ID",
        "parameters": [{
          "in": "path",
          "name": "item_id",
          "type": "string",
          "description": "Item ID of the item to be retrieved",
          "required": true
        }],
        "responses": {
          "200": {
            "description": "Item found and returned"
          },
          "404": {
            "description": "No item was found"
          },
          "500": {
            "description": "Server Error. Send error back."
          }
        }
      }
    },
    "/items/getUserItems": {
      "get": {
        "tags": ["Items"],
        "summary": "Get user's items",
        "parameters": [{
          "in": "body",
          "name": "uid",
          "type": "string",
          "description": "User ID for retrieving all items that belong to this user",
          "required": true
        }],
        "responses": {
          "200": {
            "description": "Found user items and returned"
          },
          "404": {
            "description": "No user items found"
          },
          "500": {
            "description": "Server Error"
          }
        }
      }
    },
    "/items/post": {
      "post": {
        "tags": ["Items"],
        "summary": "Post new items",
        "parameters": [{
          "in": "body",
          "name": "item_name",
          "type": "string",
          "description": "Item name of new item",
          "required": true
        },{
          "in": "body",
          "name": "item_desc",
          "type": "string",
          "description": "Item description of new item",
          "required": true
        }, {
          "in": "body",
          "name": "item_price",
          "type": "number",
          "description": "Item price of new item",
          "required": true
        }, {
          "in": "body",
          "name": "item_discount",
          "type": "number",
          "description": "Item discount percentage of new item (if 10% discount, then 10 is the number)",
          "required": true
        }],
        "responses": {
          "201": {
            "description": "Item created successfully"
          },
          "500": {
            "description": "Server Error"
          }
        }
      }
    },
    "/items/delete": {
      "delete": {
        "tags": ["Items"],
        "summary": "Delete specific item",
        "parameters": [{
          "in": "body",
          "name": "item_id",
          "type": "string",
          "description": "ID of item to be deleted",
          "required": true
        }],
        "responses": {
          "200": {
            "description": "Item deleted successfully"
          },
          "404": {
            "description": "No item was found to be deleted"
          },
          "500": {
            "description": "Server Error"
          }
        }
      }
    },
    "/items/edit": {
      "put": {
        "tags": ["Items"],
        "summary": "Edit item",
        "parameters": [{
          "in": "body",
          "name": "item_id",
          "type": "string",
          "description": "Id of item to be edited",
          "required": true
        }, {
          "in": "body",
          "name": "item_name",
          "type": "string",
          "description": "Item name of new item",
          "required": true
        },{
          "in": "body",
          "name": "item_desc",
          "type": "string",
          "description": "Item description of new item",
          "required": true
        }, {
          "in": "body",
          "name": "item_price",
          "type": "number",
          "description": "Item price of new item",
          "required": true
        }, {
          "in": "body",
          "name": "item_discount",
          "type": "number",
          "description": "Item discount percentage of new item (if 10% discount, then 10 is the number)",
          "required": true
        }],
        "responses": {
          "200": {
            "description": "Item edited successfully"
          },
          "404": {
            "description": "No item was found to be edited"
          },
          "500": {
            "description": "Server Error"
          }
        }
      }
    }
  }
}
